<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC9C9C9"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFF70408">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Детайли"
            android:textColor="#FFFFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/age"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Години"
        android:inputType="number"
        android:textColor="#FFF70408"
        android:textColorHint="#FFF70408" />

    <EditText
        android:id="@+id/address"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Адрес"
        android:inputType="text"
        android:textColor="#FFF70408"
        android:textColorHint="#FFF70408" />

    <EditText
        android:id="@+id/city"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Град"
        android:inputType="text"
        android:textColor="#FFF70408"
        android:textColorHint="#FFF70408" />

    <EditText
        android:id="@+id/data_of_birth"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Дата на раждане"
        android:inputType="number"
        android:textColor="#FFF70408"
        android:textColorHint="#FFF70408" />

    <Button
        android:id="@+id/forword"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="#FFF70408"
        android:text="Продължи"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
